<link rel="stylesheet" href="/css/categories.css" />

<div class="container">
  <h1><%= title %></h1>

  <% if (errors.length > 0) { %>
  <ul style="color: red">
    <% errors.forEach(e => { %>
    <li><%= e.msg %></li>
    <% }) %>
  </ul>
  <% } %>

  <form action="/categories/new" method="POST">
    <input type="text" name="name" placeholder="Category name" />
    <button type="submit">Add category</button>
  </form>
</div>
