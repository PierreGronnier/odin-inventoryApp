<link rel="stylesheet" href="/css/genres.css" />
<div class="container form-card">
  <h1><%= title %></h1>
  <% if (errors.length > 0) { %>
  <ul style="color: red">
    <% errors.forEach(e => { %>
    <li><%= e.msg %></li>
    <% }) %>
  </ul>
  <% } %>
  <form action="/genres/new" method="POST">
    <input type="text" name="name" placeholder="Genre name" />
    <button type="submit">Add</button>
  </form>
</div>
<a href="/genres" class="button-link">← Back to genres</a>
